<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Reset default browser styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html, body {
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body class="m-0 p-0">
    <div class="w-full min-h-screen bg-zinc-900 text-white px-5">
        <div class="flex w-full justify-end">
            <a href="/logout" class="bg-red-500 rounded-md px-3 py-2 mb-5 inline-block">Logout</a>
        </div>
        <h3 class="text-3xl text-white">Hello, <%= user.name %></h3>
        <h4 class="text-white py-3">You can create a new post</h4>
        <form action="/post" method="post" class="py-3">
            <textarea 
                placeholder="What's on your mind?" 
                name="content" 
                class="w-1/3 px-4 py-5 resize-none bg-transparent border-2 border-zinc-800 text-white"
            ></textarea>
            <input 
                type="submit" 
                class="px-3 py-2 bg-blue-500 block rounded-md mt-2 text-white w-40" 
                value="Post"
            >
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts</h3>
            <div class="postcontainer mt-5 rounded-md">
                <% user.posts.reverse().forEach(function(post) { %>
                    <div class="post w-1/3 p-4 border-2 mb-4 bg-zinc-800 border-zinc-800">
                        <h3 class="text-blue-400 mb-2"><%= user.username %></h3>
                        <p><%= post.content %></p>
                        <div class="btns flex mt-5 gap-4">
                            <a class="text-red-500" href="/like/<%= post._id %>">Like</a>
                            <a href="/edit/<%= post._id %>" class="text-yellow-500">Edit</a> <!-- Edit Button -->
                        </div>
                    </div>
                    
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>


